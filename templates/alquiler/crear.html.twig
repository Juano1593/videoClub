{% extends 'base.html.twig' %}

{% block title %}Hello AlquilerController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <h1>Alquilar Pel√≠culas</h1>

    {{ form_start(form)}}
    {{ form_widget(form) }}
    {{ form_end(form) }}

</div>
<div>
    <table id="tabla">
        <tr>
            <th>Pelicula</th>
            <th>Valor Total</th>
            <th>Fecha Inicio</th>
            <th>Fecha Final</th>
            <th>Cliente</th>
        </tr>
        {% for alquiler in alquileres %}
        <tr>
            <td>{{ alquiler.idPeliculas }}</td>
            <td>{{ alquiler.valorTotal }}</td>
            <td>{{ alquiler.fechaInicio|date('d-m-Y') }}</td>
            <td>{{ alquiler.fechaFin|date('d-m-Y') }}</td>
            <td>{{ alquiler.cliente }}</td>          
        </tr>
        {% endfor %}
    </table>

</div>

{% endblock %}
